{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/email/*": ["../../packages/email/src/*"],
      "@/ui/*": ["../../packages/ui/src/*"],
      "@/database/*": ["../../packages/database/src/*"],
      "@/config/*": ["../../packages/config/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/.well-known/**/*.ts",
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

# Web app specific environment variables
PAYMENT_TOKEN_REQUIRED="false"

# Marketing Site URL (for legal page links)
NEXT_PUBLIC_MARKETING_SITE_HOST=http://localhost:3101

# Demo Mode
# Set to 'true' to enable demo mode login option (backend API routes and server actions)
DEMO_MODE_ENABLED=false
# Set to 'true' to show demo mode UI prompts (frontend client components)
NEXT_PUBLIC_DEMO_MODE_ENABLED=false
# Set to 'true' to hide the demo mode banner (useful for screenshots)
NEXT_PUBLIC_SUPRESSED_DEMO_BANNER=false

# PostHog Analytics (opt-in for open source deployments)
NEXT_PUBLIC_POSTHOG_ENABLED=false
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

{
  "name": "@bragdoc/email",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "biome lint --write --unsafe src/",
    "format": "biome format --write src/"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "dependencies": {
    "@bragdoc/database": "workspace:*",
    "@react-email/components": "^0.0.31",
    "@react-email/render": "^1.0.3",
    "mailgun.js": "^10.4.0",
    "form-data": "^4.0.1",
    "ai": "4.0.20",
    "zod": "^3.23.8",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.8.6",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
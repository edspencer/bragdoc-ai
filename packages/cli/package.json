{
  "name": "@bragdoc/cli",
  "version": "1.0.0",
  "description": "CLI tool for managing your brag document",
  "main": "dist/index.js",
  "bin": {
    "bragdoc": "dist/index.js"
  },
  "files": ["dist", "README.md"],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "scope": "@bragdoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edspencer/bragdoc-ai.git",
    "directory": "cli"
  },
  "keywords": ["brag-document", "cli", "career", "achievements"],
  "author": "Ed Spencer",
  "license": "MIT",
  "scripts": {
    "build": "tsc && pnpm build:copy-assets && pnpm build:chmod",
    "build:watch": "tsc -w && pnpm build:copy-assets",
    "build:copy-assets": "copyfiles -u 1 'src/**/*.mdx' dist",
    "build:chmod": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome lint --write --unsafe src/",
    "format": "biome format --write src/",
    "link-cli": "pnpm link --global",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@bragdoc/config": "workspace:*",
    "@types/yaml": "^1.9.7",
    "ai": "^5.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^12.9.6",
    "mdx-prompt": "^0.4.1",
    "node-fetch": "^2.7.0",
    "ollama-ai-provider-v2": "^1.0.0",
    "open": "^10.1.0",
    "p-limit": "^7.1.1",
    "react": "^19.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.7.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.10",
    "copyfiles": "^2.4.1",
    "jest": "^30.2.0",
    "mock-fs": "^5.4.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}

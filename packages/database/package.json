{
  "name": "@bragdoc/database",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "biome lint --write --unsafe ./src/",
    "format": "biome format --write ./src/",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "npx tsx ./src/migrate.ts",
    "test:setup": "tsx src/test-setup.ts && drizzle-kit push --config=drizzle.config.test.ts",
    "test:push": "drizzle-kit push --config=drizzle.config.test.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "postgres": "^3.4.7",
    "@neondatabase/serverless": "^1.0.2",
    "@vercel/postgres": "^0.10.0",
    "nanoid": "^5.1.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.3",
    "@types/node": "^24.9.1"
  }
}

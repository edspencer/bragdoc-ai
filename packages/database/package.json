{
  "name": "@bragdoc/database",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "biome lint --write --unsafe ./src/",
    "format": "biome format --write ./src/",
    "db:generate": "drizzle-kit generate",
    "db:push": "echo '\n⚠️  WARNING: db:push is for LOCAL DEVELOPMENT ONLY!\n⚠️  NEVER use db:push with production database credentials.\n⚠️  For production, always use the migration workflow (db:generate → db:migrate).\n⚠️  See docs/DATABASE-MIGRATIONS.md for proper workflow.\n' && drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "npx tsx ./src/migrate.ts",
    "test:setup": "tsx src/test-setup.ts && drizzle-kit push --config=drizzle.config.test.ts",
    "test:push": "drizzle-kit push --config=drizzle.config.test.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "postgres": "^3.4.7",
    "@neondatabase/serverless": "^0.10.4",
    "@vercel/postgres": "^0.10.0",
    "nanoid": "^5.1.6",
    "zod": "^3.25.76",
    "dotenv": "^16.6.1",
    "uuid": "^13.0.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.1",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.3"
  }
}

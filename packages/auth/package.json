{
  "name": "@bragdoc/auth",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "require": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "biome lint --write --unsafe src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "next-auth": "5.0.0-beta.25",
    "@auth/core": "^0.37.4",
    "@auth/drizzle-adapter": "^1.7.4",
    "bcrypt-ts": "^5.0.2",
    "@bragdoc/database": "workspace:*",
    "@bragdoc/email": "workspace:*",
    "drizzle-orm": "^0.34.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.8.6"
  }
}